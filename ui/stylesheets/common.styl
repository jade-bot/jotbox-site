color-red = #5E1F1F
color-red-border = #A23939
color-black = #1A1A1A

body {
  margin: 0;
  padding: 0;
  font-family: "Helvetica Neue";
}

* {
  box-sizing: border-box;
}

.frame {
  margin: 0 auto;
  width: 960px;
}

a {
  color: color-red;
}

.header {
  background: color-black;
  color: #fff;
  padding: 25px 0 25px 0;

  .frame {
    width: 750px;
  }

  .stripe {
    background: color-red;
    border: 1px solid color-red-border;
    border-width: 1px 0;
    padding: 15px 0;
  }

  .logo {
    margin: 0;
    a {
      background: url(../images/icon.png) no-repeat;
      font-weight: normal;
      line-height: 114px;
      padding-left: 160px;
      height: 114px;
      display: block;
      color: #fff;
      text-decoration: none;
      font-size: 54px;
      text-shadow: 1px 1px 2px #000;
    }
  }

  .phone {
    width: 269px;
    height: 450px;
    background: url(../images/phone.png) no-repeat;
    float: right;
    top: -25px;
    position: relative;
    padding: 14px 0 0 20px;
  }

  .copy {
    text-align: center;
    font-family: "HelveticaNeue-Light";
    p {
      margin: 40px 0;
    }
  }
  .callout1 {
    font-size: 36px;
  }
  .callout2 {
    font-size: 24px;
  }

  .appstore {
    width: 186px;
    height: 65px;
    background: url(../images/appstore.png) no-repeat;
    display: inline-block;
  }
}

.content {
  background: url(../images/grid.png);
  h2 {
    font-family: "HelveticaNeue-Light";
    font-size: 22px;
    font-weight: normal;
    border-bottom: 1px solid #ccc;
    margin: 0;
    padding-top: 30px;
  }

  dt {
    font-size: 16px;
  }
  dd {
    margin: 10px 0 15px 0;
  }
  dd,
  p {
    font-family: "HelveticaNeue-Light";
    font-size: 13px;
  }
  .col {
    float: left;
    width: 280px;
    margin: 0 20px;
  }
  &::after {
    clear: both;
    display: table;
    content: " ";
  }
}

.hl {
  margin: 0;
  padding: 0;
  list-style: none;
  li {
    display: inline-block;
  }
}

.footer {
  background: color-black;
  font-size: 13px;
  line-height: 50px;
  color: #e6e6e6;

  .hl {
    float: right;
    li {
      a {
        border-right: 1px solid #e6e6e6;
        padding: 0 15px;
        color: #e6e6e6;
      }
      a.last {
        border-right: 0;
        padding-right: 0;
      }
    }
  }
}

.slider {
  width: 234px;
  overflow: hidden;
}
