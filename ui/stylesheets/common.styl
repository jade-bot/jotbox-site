color-red = #5E1F1F
color-red-border = #A23939
color-black = #1A1A1A

.primary-font {
	font-family: "Helvetica Neue", "Helvetica", "Arial", sans-serif;
}

.secondary-font {
	font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", "Helvetica", "Arial", sans-serif; 
	font-weight: 300;
}

body {
	margin: 0;
	padding: 0;
	@extends .primary-font
}

* {
	box-sizing: border-box;
}

.frame {
	margin: 0 auto;
	width: 960px;
}

a {
	color: color-red;
}

.header {
	background: color-black;
	color: #fff;
	padding: 25px 0 25px 0;

	.frame {
		width: 750px;
	}

	.stripe {
		background: color-red;
		border: 1px solid color-red-border;
		border-width: 1px 0;
		padding: 15px 0;
	}

	.logo {
		margin: 0;
		a {
			image: '../images/icon.png' 114px 114px
			background-repeat: no-repeat;
			font-weight: normal;
			line-height: 114px;
			padding-left: 160px;
			height: 114px;
			display: block;
			color: #fff;
			text-decoration: none;
			font-size: 54px;
			text-shadow: 1px 1px 2px #000;
		}
	}

	.phone {
		width: 269px;
		height: 450px;
		background: url(../images/phone.png) no-repeat;
		float: right;
		top: -25px;
		position: relative;
		padding: 14px 0 0 20px;
	}

	.copy {
		@extends .secondary-font
		text-align: center;
		p {
			margin: 40px 0;
		}
	}
	.callout1 {
		font-size: 36px;
	}
	.callout2 {
		font-size: 24px;
	}

	.appstore {
		width: 186px;
		height: 65px;
		image: '../images/appstore.png' 186px 65px
		display: inline-block;
	}
}

.content {
	background: url(../images/grid.png);
	h2 {
		@extends .secondary-font
		font-size: 22px;
		border-bottom: 1px solid #ccc;
		margin: 0;
		padding-top: 30px;
	}

	dt {
		font-size: 16px;
	}
	dd {
		margin: 10px 0 15px 0;
	}
	dd,
	p {
		@extends .secondary-font
		font-size: 13px;
	}
	.col {
		float: left;
		width: 280px;
		margin: 0 20px;
	}
	&::after {
		clear: both;
		display: table;
		content: " ";
	}
}

.hl {
	margin: 0;
	padding: 0;
	list-style: none;
	li {
		display: inline-block;
	}
}

.footer {
	background: color-black;
	font-size: 13px;
	line-height: 50px;
	color: #e6e6e6;

	.hl {
		float: right;
		li {
			a {
				border-right: 1px solid #e6e6e6;
				padding: 0 15px;
				color: #e6e6e6;
			}
			a.last {
				border-right: 0;
				padding-right: 0;
			}
		}
	}
}

.slider {
	width: 234px;
	overflow: hidden;
}
